    <decisions>
        <name>Number_of_Accepted_Overrides_Exceeded</name>
        <label>Number of Accepted Overrides Exceeded</label>
        <locationX>180</locationX>
        <locationY>196</locationY>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>Accepted_Overrides_Exceeded</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>IncrementedOverrides</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>IncrementedOverrides</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>overrideCap</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Irrigation_Malfunction_Report</targetReference>
            </connector>
            <label>Exceeded</label>
        </rules>
        <rules>
            <name>Accepted_Overrides_Not_Exceeded</name>
            <conditionLogic>1 OR (2 AND 3)</conditionLogic>
            <conditions>
                <leftValueReference>IncrementedOverrides</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>IncrementedOverrides</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>IncrementedOverrides</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <elementReference>overrideCap</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>setAlertMsg</targetReference>
            </connector>
            <label>Not Exceeded</label>
        </rules>
    </decisions>
